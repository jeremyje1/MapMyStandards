# MapMyStandards unified environment template (do not commit real secrets)
# Copy to .env (local) or apply to Railway/Vercel variables.

# ---------------------------------------------------------------------------
# App Core
# ---------------------------------------------------------------------------
NODE_ENV=development
RAILWAY_ENVIRONMENT=development
APP_BASE_URL=https://app.mapmystandards.ai
API_BASE_URL=http://localhost:8000
PORT=8000
API_PORT=8000
API_HOST=0.0.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------------------------------------------------------------------------
# Security / Auth (generate via scripts/generate_secrets.py for local dev)
# ---------------------------------------------------------------------------
SECRET_KEY=GENERATE_WITH_SCRIPT
JWT_SECRET_KEY=GENERATE_WITH_SCRIPT
NEXTAUTH_SECRET=GENERATE_WITH_SCRIPT
NEXTAUTH_URL=http://localhost:3000
DATABASE_ENCRYPTION_KEY=GENERATE_WITH_SCRIPT

# ---------------------------------------------------------------------------
# Database (Railway Postgres w/ pgvector)
# ---------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/mapmystandards
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
PGSSLMODE=require

# ---------------------------------------------------------------------------
# Object Storage (AWS S3)
# ---------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=YOUR_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET
AWS_REGION=us-east-1
S3_BUCKET=mms-artifacts

# ---------------------------------------------------------------------------
# AI Providers
# ---------------------------------------------------------------------------
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY
OPENAI_EMBED_MODEL=text-embedding-3-large
OPENAI_JSON_MODEL=gpt-4.1-mini
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_EMBED=text-embed-1
BEDROCK_MODEL_CLAUDE=anthropic.claude-3-5-sonnet-20240620-v1:0

# ---------------------------------------------------------------------------
# Feature Flags
# ---------------------------------------------------------------------------
FEATURE_EVIDENCE_MAPPER=true
FEATURE_EVIDENCE_TRUST=true
FEATURE_CITEGUARD=true
FEATURE_STANDARDS_GRAPH=true
FEATURE_GAP_RISK=true
FEATURE_CROSSWALK=true

# ---------------------------------------------------------------------------
# Rate Limits / Uploads
# ---------------------------------------------------------------------------
MAX_UPLOAD_MB=100
RATE_LIMIT_MAP_PER_MIN=20
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=pdf,docx,xlsx,csv,txt,md

# ---------------------------------------------------------------------------
# Email (Postmark)
# ---------------------------------------------------------------------------
POSTMARK_API_TOKEN=your-postmark-api-token
POSTMARK_MESSAGE_STREAM=mapmystandards-transactional
FROM_EMAIL=noreply@yourdomain.com
REPLY_TO_EMAIL=support@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ---------------------------------------------------------------------------
# Payments (Stripe)
# ---------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_...
STRIPE_API_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_MONTHLY_PRICE_ID=price_YOUR_MONTHLY_PRICE_ID
STRIPE_ANNUAL_PRICE_ID=price_YOUR_ANNUAL_PRICE_ID
STRIPE_ONETIME_PRICE_ID=price_YOUR_ONETIME_PRICE_ID
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY

# ---------------------------------------------------------------------------
# Optional Services
# ---------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600
PINECONE_API_KEY=pcsk_...

# ---------------------------------------------------------------------------
# Logging & Observability
# ---------------------------------------------------------------------------
LOG_LEVEL=info
DEBUG=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# ---------------------------------------------------------------------------
# CORS / Misc
# ---------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
DATA_DIR=./data