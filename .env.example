# Backend environment example (DO NOT COMMIT REAL SECRETS)
NODE_ENV=production
API_BASE_URL=https://api.mapmystandards.ai

# Auth
JWT_SECRET_KEY=replace-with-generated-64-char-secret

# Providers
OPENAI_API_KEY=sk-proj-...
ANTHROPIC_API_KEY=sk-ant-...
PINECONE_API_KEY=pcsk_...

# Email
POSTMARK_API_TOKEN=...
POSTMARK_MESSAGE_STREAM=mapmystandards-transactional

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_MONTHLY_PRICE_ID=price_...
STRIPE_ANNUAL_PRICE_ID=price_...

# App URLs
NEXT_PUBLIC_APP_URL=https://app.mapmystandards.ai

# Notes:
# - Copy to .env locally, or configure via Railway/Vercel project settings.
# - Never commit real secrets. Rotate any keys that were ever committed.
# MapMyStandards Platform Environment Variables
# Copy this file to .env and fill in your values
# Run scripts/generate_secrets.py to generate secure keys

# ============================================
# SECURITY (Required - Run scripts/generate_secrets.py)
# ============================================
SECRET_KEY=GENERATE_WITH_SCRIPT
JWT_SECRET_KEY=GENERATE_WITH_SCRIPT  
NEXTAUTH_SECRET=GENERATE_WITH_SCRIPT
NEXTAUTH_URL=http://localhost:3000
DATABASE_ENCRYPTION_KEY=GENERATE_WITH_SCRIPT

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
RAILWAY_ENVIRONMENT=development
API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=8000
API_PORT=8000
API_HOST=0.0.0.0

# ============================================
# DATABASE
# ============================================
# PostgreSQL (Production)
DATABASE_URL=postgresql://user:password@localhost:5432/mapmystandards
# SQLite (Development - uncomment to use)
# DATABASE_URL=sqlite:///./data/a3e_dev.db

DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# ============================================
# EMAIL (Postmark - Primary Provider)
# ============================================
POSTMARK_API_TOKEN=your-postmark-api-token
POSTMARK_MESSAGE_STREAM=outbound
FROM_EMAIL=noreply@yourdomain.com
REPLY_TO_EMAIL=support@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# PAYMENT (Stripe)
# ============================================
STRIPE_API_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_MONTHLY_PRICE_ID=price_YOUR_MONTHLY_PRICE_ID
STRIPE_ANNUAL_PRICE_ID=price_YOUR_ANNUAL_PRICE_ID
STRIPE_ONETIME_PRICE_ID=price_YOUR_ONETIME_PRICE_ID
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY

# ============================================
# AI SERVICES (Optional)
# ============================================
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY

# ============================================
# REDIS CACHE (Optional for Production)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
DEBUG=false

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=pdf,docx,xlsx,csv,txt,md
DATA_DIR=./data