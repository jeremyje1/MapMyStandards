FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements-a3e-deploy.txt .
RUN pip install --no-cache-dir -r requirements-a3e-deploy.txt

# Copy A3E application
COPY a3e_main_deploy.py .

# Create directories
RUN mkdir -p templates static

# Expose port
EXPOSE 8000

# Start application
CMD ["python", "a3e_main_deploy.py"]
