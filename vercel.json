{
  "version": 2,
  "builds": [
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "status": 308, "headers": { "Location": "/homepage-enhanced.html" } },
    { "src": "^/api/(.*)$", "dest": "https://api.mapmystandards.ai/api/$1" },
    { "src": "/login-platform(\\.html)?", "status": 308, "headers": { "Location": "/login" } },
    { "src": "/dashboard-modern", "status": 308, "headers": { "Location": "/dashboard" } },
    { "src": "/reports-modern", "status": 308, "headers": { "Location": "/reports" } },
    { "src": "/standards-modern", "status": 308, "headers": { "Location": "/standards" } },
    { "src": "/team-settings\\.html", "status": 308, "headers": { "Location": "/dashboard" } },
    { "src": "/scenario-modeling\\.html", "status": 308, "headers": { "Location": "/dashboard" } },
    { "src": "/powerbi-dashboard\\.html", "status": 308, "headers": { "Location": "/reports" } },
    { "src": "/org-chart", "status": 308, "headers": { "Location": "/dashboard" } },
    { "src": "^/dashboard$", "dest": "/web/dashboard-modern.html" },
    { "src": "^/standards$", "dest": "/web/standards-modern.html" },
    { "src": "^/reports$", "dest": "/web/reports-modern.html" },
    { "src": "^/upload$", "dest": "/web/upload-enhanced-v2.html" },
    { "src": "/([^./]+)$", "dest": "/web/$1.html" },
    { "src": "/(.*)", "dest": "/web/$1" }
  ]
}