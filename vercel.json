{
  "version": 2,
  "builds": [
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "status": 308, "headers": { "Location": "/login.html" } },
    { "src": "^/api/(.*)$", "dest": "https://api.mapmystandards.ai/api/$1" },
    { "src": "/login-platform(\\.html)?", "status": 308, "headers": { "Location": "/login.html" } },
    { "src": "/dashboard-enhanced(\\.html)?", "status": 308, "headers": { "Location": "/dashboard.html" } },
    { "src": "/dashboard-modern(\\.html)?", "status": 308, "headers": { "Location": "/dashboard.html" } },
    { "src": "/upload-working(\\.html)?", "status": 308, "headers": { "Location": "/upload.html" } },
    { "src": "/upload-enhanced(\\.html)?", "status": 308, "headers": { "Location": "/upload.html" } },
    { "src": "/team-settings\\.html", "status": 308, "headers": { "Location": "/dashboard.html" } },
    { "src": "/scenario-modeling\\.html", "status": 308, "headers": { "Location": "/dashboard.html" } },
    { "src": "/powerbi-dashboard\\.html", "status": 308, "headers": { "Location": "/reports-modern.html" } },
    { "src": "/org-chart", "status": 308, "headers": { "Location": "/dashboard.html" } },
    { "src": "/([^./]+)$", "dest": "/web/$1.html" },
    { "src": "/(.*)", "dest": "/web/$1" }
  ]
}