{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/pricing_clean.html"
    },
    {
      "source": "/pricing",
      "destination": "/pricing_clean.html"
    },
    {
      "source": "/signup",
      "destination": "/signup.html"
    },
    {
      "source": "/trial",
      "destination": "/signup.html"
    },
    {
      "source": "/contact",
      "destination": "/contact.html"
    },
    {
      "source": "/trial-success",
      "destination": "/trial-success.html"
    }
  ],
  "redirects": [
    {
      "source": "/login",
      "destination": "https://api.mapmystandards.ai/login",
      "permanent": false
    },
    {
      "source": "/dashboard",
      "destination": "https://api.mapmystandards.ai/dashboard", 
      "permanent": false
    }
  ]
}
