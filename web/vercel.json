{
  "version": 2,
  "outputDirectory": ".",
  "buildCommand": "",
  "installCommand": "",
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    { "source": "/", "destination": "/homepage-enhanced", "permanent": false },
    { "source": "/upload-modern", "destination": "/upload", "permanent": false },
    { "source": "/dashboard-modern", "destination": "/dashboard", "permanent": false },
    { "source": "/reports-modern", "destination": "/report-generation", "permanent": false },
    { "source": "/standards-modern", "destination": "/standards-selection-wizard", "permanent": false },
    { "source": "/login.html", "destination": "/login-enhanced.html", "permanent": false },
    { "source": "/login-platform.html", "destination": "/login-enhanced.html", "permanent": false }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://api.mapmystandards.ai/api/$1" },
    { "source": "/login", "destination": "/login-enhanced.html" },
    { "source": "/dashboard", "destination": "/dashboard-enhanced.html" },
    { "source": "/upload", "destination": "/upload-enhanced.html" },
    { "source": "/standards-selection-wizard", "destination": "/standards-selection-wizard.html" },
    { "source": "/evidence-mapping-wizard", "destination": "/evidence-mapping-wizard.html" },
    { "source": "/report-generation", "destination": "/report-generation.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}